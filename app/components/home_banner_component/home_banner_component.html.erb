
  <style>
    <%= "#main-section-#{@count}"  %>{
      width: 100%;
      background: url('<%= render(ImageComponent.new( image: @banner.image )) %>') no-repeat center center;
      background-attachment: fixed;
      -webkit-background-size: cover;
      -moz-background-size: cover;
      -o-background-size: cover;
      background-size: cover;
      height: 100%;
      overflow: hidden;
    }
    @media (max-width: 768px) {
      <%= "#main-section-#{@count}"%> {
      width: 100%;
      background: url('<%= render(ImageComponent.new( image: @banner.image )) %>') no-repeat center center;
      background-attachment: unset;
      -webkit-background-size: cover;
      -moz-background-size: cover;
      -o-background-size: cover;
      background-size: cover;
      height: 100%;
      overflow: hidden;
      }
    }
  </style>


<section id='<%="main-section-#{@count}" %>' class="hero is-large banners">
  <div class="hero-body banners__body">
    <div class="container">
      <div class="columns">
        <div class="column is-6-desktop is-8-touch is-offset-6-desktop is-offset-4-touch ">
          <%= render(BodyComponent.new(title: @banner.title, body: @banner.body))%>
        </div>
      </div>
    </div>
  </div>
</section>
