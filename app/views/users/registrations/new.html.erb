<section class="hero is-fullheight">
  <div class="hero-body">
    <div class="container">
      <h2 class="title is-2 has-text-centered">Sign up</h2>
      <div class="columns is-centered">
        <div class="column is-5-tablet is-4-desktop is-6-widescreen">
          <div class="box has-background-white-ter">
            <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
              <div class="field">
                <%= f.label :Nombre, class:'label' %><br />
                <div class="control has-icons-left">
                  <%= f.text_field :name, autofocus: true, autocomplete: "Nombre",class: 'input' %>
                  <span class="icon is-small is-left">
                    <i class="fas fa-signature"></i>
                  </span>
                </div>
              </div>
              <div class="field">
                <%= f.label :Apellidos, class:'label' %><br />
                <div class="control has-icons-left">
                  <%= f.text_field :last_name, autofocus: true, autocomplete: "Apellidos",class: 'input' %>
                  <span class="icon is-small is-left">
                    <i class="fas fa-signature"></i>
                  </span>
                </div>
              </div>
              <div class="field">
                <%= f.label :Telefono, class:'label' %><br />
                <div class="control has-icons-left">
                  <%= f.telephone_field :phone, autofocus: true, autocomplete: "Telefono",pattern: '[0-9]{9}', class: 'input' %>
                  <span class="icon is-small is-left">
                    <i class="fas fa-phone-alt"></i>
                  </span>
                </div>
              </div>
              <div class="field">
                <%= f.label :email, class:'label' %><br />
                <div class="control has-icons-left">
                  <%= f.email_field :email, autofocus: true, autocomplete: "email",class: 'input',placeholder: "e.g. bobsmith@gmail.com" %>
                  <span class="icon is-small is-left">
                    <i class="fa fa-envelope"></i>
                  </span>
                </div>
              </div>
              <div class="field">
                <%= f.label :CumpleaÃ±os, class:'label' %><br />
                <div class="control has-icons-left">
                  <%= f.date_field :birthdate, autofocus: true, autocomplete: "Cumpleanos",class: 'input' %>
                  <span class="icon is-small is-left">
                    <i class="far fa-birthday-cake"></i>
                  </span>
                </div>
              </div>
              <div class="field">  
                <%= f.label :password, class: 'label' %><br />
                  <% if @minimum_password_length %>
                  <em>(<%= @minimum_password_length %> characters minimum)</em>
                  <% end %><br />
                <div class="control has-icons-left">
                  <%= f.password_field :password, autocomplete: "new-password",placeholder: "*******", class: "input"  %>
                  <span class="icon is-small is-left">
                    <i class="fa fa-lock"></i>
                  </span>
                </div>
              </div>           
              <div class="field">
                <% if devise_mapping.rememberable? %>
                  <div class="field">
                    <%= f.check_box :remember_me %>
                    <%= f.label :remember_me, class: 'checkbox' %>
                  </div>
                <% end %>
              </div>
              <div class="actions field is-flex is-justify-content-center">
                <%= f.submit "Sign up", class: 'button is-primary is-small ' %>
              </div>
            <% end %>
            <%#= render "devise/shared/links" %>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>
