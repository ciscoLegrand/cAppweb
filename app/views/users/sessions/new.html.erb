
<section class="hero is-fullheight">
  <div class="hero-body">
    <div class="container">
        <h2 class="title is-2 has-text-centered">Log in</h2>
      <div class="columns is-centered">
        <div class="column is-5-tablet is-8-desktop is-6-widescreen">
          <div class="box ">
            <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
              <div class="field has-text-left">
                <%= f.label :email, class:'label is-pulled-left mr-3' %>
                 <%= image_tag("icons/ico-mail.svg", class: "icon is-small") %>
                <%= f.email_field :email, autofocus: true, autocomplete: "email",class: 'input',placeholder: "e.g. camilo@gmail.com" %>
              </div>
              <div class="field has-text-left"data-controller="password-visibility"
                                              data-password-visibility-show-value="<%= asset_path("icons/ico-eye.svg") %>"
                                              data-password-visibility-hide-value="<%= asset_path("icons/ico-eye-off.svg") %>">
                <%= f.label :password, value: "ContraseÃ±a:" , class:'label is-pulled-left mr-3'%> 
                <%= image_tag("icons/ico-eye-off.svg", class: "icon is-small", data: {"password-visibility-target": "icon", action: "click->password-visibility#change" }) %>
                <%= f.password_field :password, autocomplete: "current-password", class: "input mt-3", data: {"password-visibility-target": "input"} %>
              </div>          
              <div class="field">
                <% if devise_mapping.rememberable? %>
                  <div class="field">
                    <%= f.check_box :remember_me %>
                    <%= f.label :remember_me, class: 'checkbox' %>
                  </div>
                <% end %>
              </div>
              <div class="actions field is-flex is-justify-content-center">
                <%= f.submit "Log in", class: 'button is-primary ' %>
              </div>
            <% end %>
            <%#= render "devise/shared/links" %>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>

