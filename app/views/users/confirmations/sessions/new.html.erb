
<section class="hero is-fullheight has-background-primary">
  <div class="hero-body">
    <div class="container">
        <h2 class="title is-2 has-text-centered">Log in</h2>
      <div class="columns is-centered">
        <div class="column is-5-tablet is-8-desktop is-6-widescreen">
          <div class="box ">
            <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
              <div class="field">
                <%= f.label :email, class:'label' %>
                <div class="control has-icons-right">
                  <%= f.email_field :email, autofocus: true, autocomplete: "email",class: 'input',placeholder: "e.g. camilo@gmail.com" %>
                  <span class="icon is-small is-right">
                    <i class="fa fa-envelope"></i>
                  </span>
                </div>
              </div>
              <div class="field">
                <%= f.label :password, class: 'label' %>
                <div class="control has-icons-right">
                  <%= f.password_field :password, autocomplete: "current-password",placeholder: "*******", class: "input" %>
                  <span class="icon is-small is-right">
                    <i class="fa fa-lock"></i>
                  </span>
                </div>
              </div>           
              <div class="field">
                <% if devise_mapping.rememberable? %>
                  <div class="field">
                    <%= f.check_box :remember_me %>
                    <%= f.label :remember_me, class: 'checkbox' %>
                  </div>
                <% end %>
              </div>
              <div class="actions field is-flex is-justify-content-center">
                <%= f.submit "Log in", class: 'button is-primary ' %>
              </div>
            <% end %>
            <%#= render "devise/shared/links" %>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>

