<h2 class="title is-2"><%= t "devise.invitations.edit.header" %></h2>

<div class="container">

<%= form_for(resource, as: resource_name, url: invitation_path(resource_name), html: { method: :put }) do |f| %>
  <%= render "users/shared/error_messages", resource: resource %>
  <%= f.hidden_field :invitation_token, readonly: true %>

  <% if f.object.class.require_password_on_accepting %>
    <div class="field">
      <%= f.label :password, class: 'label' %>
      <div class="control">
        <%= f.password_field :password, class: 'input is-medium' %>
      </div>
    </div>

    <div class="field">
      <%= f.label :password_confirmation, class: 'label' %>
      <div class="control">
        <%= f.password_field :password_confirmation, class:' input is-medium' %>
      </div>
    </div>
  <% end %>

  <div class="actions control">
    <%= f.submit t("devise.invitations.edit.submit_button"), class: 'button is-medium is-primary' %>
  </div>
<% end %>
</div>