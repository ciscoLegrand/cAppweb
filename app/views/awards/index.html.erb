



<div class="box">
  <table class="table is-striped is-hoverable is-sortable is-fullwidth">
<%= link_to 'New Award', new_award_path, class: 'button is-primary' %>
    <thead>
      <tr>
        <th class="title is-5">imagen</th>
        <th class="title is-5">Descripci√≥n</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
        <% if @awards.present? %>
        <tr>
          <td>
            <% if @awards.images.attached? %>
              <%= image_tag url_for(@awards.images.first), data: {src: "#{rails_blob_url(@awards.images.first)}"}, width: '50' %>
            <% end %>
          </td>
          <td><%= @awards.body %></td>
          
          <td><%= link_to inline_svg_tag('icons/ico-eye.svg'), @awards, class: 'icon is-centered is-vcentered' %></td>
          <td><%= link_to inline_svg_tag('icons/ico-edit.svg'), edit_award_path(@awards), class: 'icon is-centered is-vcentered' %></td>
          <td><%= link_to inline_svg_tag('icons/ico-trash.svg'), @awards, method: :delete, data: { confirm: 'Are you sure?' }, class: 'icon mdi mdi-light is-centered is-vcentered' %></td>
        </tr>
        <% end %>
    </tbody>
  </table>
</div>

