<h1 class="table-subtitle subtitle is-4 has-text-centered has-text-white has-background-primary">Premios</h1>
<%= link_to 'Crear Pemios', new_award_path, class: "button is-primary is-hoverable mb-2" %>

<% if @award.present? %>
  <%= turbo_frame_tag :users do %>
    <%= render TableComponent.new(headers: @headers) do |table| %>
        <%= table.row(cells: object_to_table_cells(@award, @attrs)) do  |row| %>
          <% row.actions do %>
            <div class="buttons is-pulled-right">
              <%= link_to inline_svg_tag('icons/ico-eye.svg', class: 'icon is-medium has-text-primary'), @award,  data:{turbo_frame: "_top"}  if current_user.is_admin?  %>
              <%= link_to inline_svg_tag('icons/ico-edit.svg', class: 'icon is-medium has-text-primary mx-3'),  edit_award_path(@award), data:{turbo_frame: "_top"} if current_user.is_admin? %>
              <%= button_to @award ,class: 'btn-icon is-clickable', method: :delete, data: { confirm: 'Are you sure?' }   do  %>
                <%= inline_svg_tag('icons/ico-trash.svg', class: 'icon is-medium has-text-primary is-clickable') %>
              <% end %>
            </div>
          <% end %>
        <% end %>
    <% end %>
  <% end %>  
<% end %>

