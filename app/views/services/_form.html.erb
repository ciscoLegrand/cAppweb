
<div class=container>
  <%= form_for @service, html: {multipart: true, class: 'box'} do |form| %>
    <% if service.errors.any? %>
      <div id="error_explanation">
        <h2><%= pluralize(service.errors.count, "error") %> prohibited this service from being saved:</h2>

        <ul>
          <% service.errors.each do |error| %>
            <li><%= error.full_message %></li>
          <% end %>
        </ul>
      </div>
    <% end %>

    <div class="field">
      <%= form.label :nombre, class: 'label' %>
      <div class="control">
        <%= form.text_field :name, class: 'input is-medium' %>
      </div>
    </div>
    <div class="field">
      <%= form.label :descripcion, class: 'label' %>
      <div class="control">
        <%= form.text_area :description, class: 'input is-medium' %>
      </div>
    </div>  

    <div class="field">
      <%= form.label :precio, class: 'label' %>
      <div class="control">
          <%= form.text_field :price, class: 'input is-medium' %>
      </div>
    </div>         

    <div class="field">
      <%= form.label :image, class: 'label' %>
      <div class="control">
        <%= form.file_field :image, class: 'input is medium' %>
      </div>
    </div>
    <div class="actions control">
      <%= form.submit 'crear servicio', class: 'button is-link'%>
    </div>
  <% end %>
</div>