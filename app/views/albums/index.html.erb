     <h4 class="panel-heading | subtitle is-4 | has-text-centered">
       Galerías
     </h4>

     <div class="card is-child has-table has-mobile-sort-spaced">
       <%= link_to 'New Album', new_album_path, class: "button is-primary is-hoverable is-small mr-2 mb-2 is-pulled-left" %>
       <header class="card-header">
         <p class="card-header-title">
           <span class="icon"><i class="mdi mdi-account-multiple"></i></span>
           Albums
         </p>
         <a href="#" class="card-header-icon">
           <span class="icon"><i class="mdi mdi-reload"></i></span>
         </a>
       </header>
       <div class="card-content">
         <div class="b-table has-pagination">
           <div class="table-wrapper has-mobile-cards">
             <table class="table is-fullwidth is-striped is-hoverable is-sortable is-fullwidth">
               <thead>
                 <tr>
                   <th class="title is-5">Titulo</th>
                   <th class="title is-5">Fecha</th>
                   <th class="title is-5">Contraseña</th>
                   <th class="title is-5">Portada</th>
                   <th colspan="2"></th>
                 </tr>
               </thead>

               <tbody>
                 <% @albums.each do |album| %>
                 <tr>
                   <td> <%= album.title %></td>
                   <td> <%= album.date_event %></td>
                   <td class="has-text-centered"> <%= album.password%> </td>
                   <td>
                     <% if album.galleries.present? && album.galleries.first.images.attached? %>
                     <%= image_tag url_for( album.galleries.first.images.first), data: {src: "#{rails_blob_url(album.galleries.first.images.first)}"},width: '50' %>
                     <% end %>
                   </td>
                   <td><%= link_to svg('ico-eye.svg'), album, class: 'icon is-centered is-vcentered' %></td>
                   <td>
                     <%= link_to svg('ico-trash.svg'), album, method: :delete, data: { confirm: 'Are you sure?' }, class: 'icon mdi mdi-light is-centered is-vcentered' %>
                   </td>
                 </tr>
                 <% end %>
               </tbody>
             </table>
           </div>
         </div>
       </div>
     </div>