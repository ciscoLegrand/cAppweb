<h1 class="table-subtitle subtitle is-4 has-text-centered has-text-white has-background-primary">Opiniones</h1>
<%= button_to 'Scrape', scrape_opinions_path, class: "button is-success is-hoverable   mb-2" %>
<div class="clearfix"></div>
<%= turbo_frame_tag :users do %>
  <%= render TableComponent.new(headers: @headers) do |table| %>
    <%= @opinions.each do |opinion|%>
      <%= table.row(cells: object_to_table_cells(opinion, @attrs)) do  |row| %>
        <% row.actions do %>
          <div class="buttons is-pulled-right">
            <%= link_to inline_svg_tag('icons/ico-eye.svg', class: 'icon is-medium has-text-primary'), opinion,  data:{turbo_frame: "_top"}  if current_user.is_admin?  %>
            <%= link_to inline_svg_tag('icons/ico-edit.svg', class: 'icon is-medium has-text-primary mx-3'), edit_opinion_path(opinion), data:{turbo_frame: "_top"} if current_user.is_admin? %>
            <%= button_to opinion ,class: 'btn-icon is-clickable', method: :delete, data: { confirm: 'Are you sure?' }   do  %>
              <%= inline_svg_tag('icons/ico-trash.svg', class: 'icon is-medium has-text-primary is-clickable') %>
            <% end %>
          </div>
        <% end %>
      <% end %>
    <% end %>
  <% end %>
<% end %>