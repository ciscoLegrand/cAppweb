
<div class="container is-fluid  py-3 ">
  
    <div class="columns is-multiline">
      
        <%#= render(CardComponent.with_collection(@services)) %>
        <% @services.each do |service| %>
          <div class=" column is-one-third-desktop is-6-tablet is-12-mobile my-3">
            <div class="card">
              <div class="card-image">
                <figure class="image is-16by9">
                  <%= link_to servicio_path(@main_service, service) do  %>
                    <%= image_tag service.image_url if service.image %>
                  <% end %>
                </figure>
              </div>
              <div class="card-content">
                <div class="is-flex is-justify-content-space-between pt-3">
                  <div class="subtitle is-size-4-desktop is-size-6-touch  has-text-weight-semibold"><%= link_to service.name, servicio_path(@main_service, service) %></div>
                  <span class="tag is-link is-size-5 has-text-weight-medium"> <%= number_to_currency service.price %> </span>
                </div>
                <hr>
                <div class="media">
                  <div class="media-content">
                    <p class="subtitle is-6"><%= service.short_dscription %></p>
                  </div>
                </div>
              </div>
            </div>
          </div>
        <% end %>
      
    </div>
  
</div>  
