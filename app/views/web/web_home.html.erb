<!--about content 1-->
<% if @about.present? && @about.visible?%>
  <section class="section">
    <% if @about.content2.present? && @about.content3.present? %>
      <div class="columns is-centered">
        <div class="column is-6">
          <div class="">
            <figure class="image is-5by4">
              <%= image_tag(url_for(@about.image)) if @about.image.attached? %>
