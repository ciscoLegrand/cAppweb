<!--opinions-->
<% if @opinions.present? %>
  <section class="hero is-medium "> 
    <h1 class="title is-2-desktop is-4-touch has-text-centered">Nuestros clientes opinan</h1>
    <div class="opinions" data-controller="swiper">
      <div class="swiper-container my-5 hero is-large" data-swiper-target="opinions">
        <div class="swiper-wrapper is-align-items-center">
          <% @opinions.order('created_at DESC').each do |opinion|%>
            <div class="swiper-slide ">
              <div class="card py-3 px-3">
                <div class="card-content">
                  <p class="mt-2 mb-4">                
                    <span class="is-size-6">
                      <%= opinion.name%>
                    </span>
                  </p>
                  <p class="  title is-4">
                  <%= link_to opinion.title, 'https://www.bodas.net/musica/la-gramola-discotecas-moviles--e15600/opiniones', target: 'blank' %>
                  </p>
                  <p class="is-size-6">
                    <%= opinion.body%>
                  </p>
                </div>
                <%= link_to 'https://www.bodas.net/musica/la-gramola-discotecas-moviles--e15600/opiniones', target: 'blank' do%>
                  <div class="icon is-large is-pulled-left mt-4 ">
                    <%=inline_svg_tag('icons/ico-bodasnet.svg')%>
                  </div>
                <% end %>
                <p class="mt-4 mb-3 has-text-right ">
                  <span class="opinions__tag ">
                    <% count = 0.0%>         
                    <% while count < opinion.ratingStar do  %>
                      <span class="icon is-small">
                        <%=inline_svg_tag('icons/ico-star-regular.svg')%> 
                      </span>
                      <% count += 1%>
                    <% end %>
                  </span>
                  <span class="tag is-success"><%= opinion.ratingStar%></span>                  
                </p>
              </div>  
            </div>
          <% end %>
        </div>
        <% if @opinions.count > 1 %>
          <!-- Add Arrows -->
          <div class="swiper-button-next"></div>
          <div class="swiper-button-prev"></div>
        <% end %>
      </div>
    </div>
  </section>
<% end %>
