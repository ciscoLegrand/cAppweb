                </div>
              </div>
              <div>
                <h3 class="title is-size-4 is-size-4-mobile is-spaced mb-3"><%= @about.title3 if @about.title3.present? %></h3>
                <p class="subtitle is-size-4 is-size-5-mobile"><%=@about.content_right %></p>
              </div>
            </div>
          <% end %>
        </div>
      </div>
    <% end %>
  </section>
<% end %>
