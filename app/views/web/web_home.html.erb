<% if 1 == 0 %>
  <% if @quotes.present? %>  
    <section class="hero is-fullheight">
      <div class="hero-body">
        <div class="columns is-8 is-variable ">
          <% @quotes.each do |quote| %>
            <div class="column is-two-thirds">
              <div class=" "><%= quote.body %></div>
            </div>
          <% end %>
        </div>
      </div>
    </section>
